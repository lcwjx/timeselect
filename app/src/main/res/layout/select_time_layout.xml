<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#aacccccc"
             android:clickable="true">

    <LinearLayout
        android:id="@+id/animation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/x_time_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/x_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/x_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/x_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/x_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/x_minute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="分"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.example.lichen.timeselect.ScrollPickerView
                android:id="@+id/year_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:max_text_size="24dp"
                app:min_text_size="20dp"
                app:visible_item_count="5"/>

            <com.example.lichen.timeselect.ScrollPickerView
                android:id="@+id/month_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:max_text_size="24dp"
                app:min_text_size="20dp"
                app:visible_item_count="5"/>

            <com.example.lichen.timeselect.ScrollPickerView
                android:id="@+id/day_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:max_text_size="24dp"
                app:min_text_size="20dp"
                app:visible_item_count="5"/>

            <com.example.lichen.timeselect.ScrollPickerView
                android:id="@+id/hour_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:max_text_size="24dp"
                app:min_text_size="20dp"
                app:visible_item_count="5"/>

            <com.example.lichen.timeselect.ScrollPickerView
                android:id="@+id/minute_pick"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                app:max_text_size="24dp"
                app:min_text_size="20dp"
                app:visible_item_count="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"/>


            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>